# OpenRouter API for LLM models (required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API for embeddings (required)
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API for web search (required)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database configuration (relative to backend directory)
CHROMA_DB_PATH=./data/chroma_db

# File upload configuration (relative to backend directory)
UPLOAD_FOLDER=./uploads

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5177
